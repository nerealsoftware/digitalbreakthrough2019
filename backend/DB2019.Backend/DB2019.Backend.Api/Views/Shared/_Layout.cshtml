@using DB2019.Backend.Api.Controllers
@using DB2019.Backend.Api.Helpers
@using DB2019.Backend.Api.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.SiteTitle - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="@Url.Content("~/css/w3.css")">
    <link rel="stylesheet" href="@Url.Content("~/css/font-awesome.min.css")">
    <style type="text/css">
        .header-bg {
            background: url('@Url.Content("~/Images/hdr3.jpg")') no-repeat;
            background-position: center left;
            min-height: 250px;
        }
    </style>

</head>

<body class="w3-light-grey">

    <div class="w3-content w3-margin-top  w3-margin-bottom w3-card" style="max-width:1400px;">

        <div class="header-bg">
        </div>

        <div class="w3-row">

            <div class="w3-col">

                <div class="w3-container w3-teal w3-border-top">
                    <h1>@ViewBag.Title</h1>
                </div>

                <div class="w3-bar w3-black w3-large">
                    <a href="#" class="w3-bar-item w3-button w3-mobile"><i class="fa fa-home"></i></a>
                    <a href="#" class="w3-bar-item w3-button w3-mobile">Карта обращений</a>
                    <div class="w3-dropdown-hover w3-center">
                        <button class="w3-button w3-mobile w3-center">Обращения по категориям</button>
                        <div class="w3-dropdown-content w3-bar-block w3-card-4 w3-light-grey">
                            @foreach (var category in LayoutHelper.GetCategories())
                            {
                                <a href="#" class="w3-bar-item w3-button w3-mobile">@(category.Name ?? "- Не задана -")</a>
                            }
                        </div>
                    </div>
                    <a href="#" class="w3-bar-item w3-button w3-mobile">О проекте</a>
                </div>

                <div class="w3-white">

                    <div class="w3-container w3-white">
                        <h2>Nereal ЖКХ, нереальное решение реальных проблем!</h2>
                    </div>

                    @RenderBody()

                </div>

                <div class="w3-container w3-teal">
                    <h5>Nereal ЖКХ</h5>
                    <p class="w3-small">Обращайтесь к нам, и ваши волосы станут мягкими и шелковистыми! (ц) 2019</p>
                </div>

            </div>

        </div>

    </div>
    @RenderSection("scripts", required: false)
</body>

</html>
